<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Nominee Name -->
            <!-- Nominee Name -->
            <!-- Nominee Name -->
            <EditText
                android:id="@+id/editTextKycNomineeInfoNomineeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="center"
                android:hint="@string/hint_edit_text_enter_nominee_name"
                android:inputType="text" />
            <!-- Nominee Mobile -->
            <!-- Nominee Mobile -->
            <!-- Nominee Mobile -->
            <EditText
                android:id="@+id/editTextKycNomineeInfoNomineeMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="center"
                android:hint="@string/hint_edit_text_enter_nominee_mobile_number"
                android:inputType="phone"
                android:maxLength="11"/>
            <!-- Relation -->
            <!-- Relation -->
            <!-- Relation -->
            <EditText
                android:id="@+id/editTextKycNomineeInfoRelation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="center"
                android:hint="@string/hint_edit_text_enter_relation"
                android:inputType="text" />
            <!-- Percent -->
            <!-- Percent -->
            <!-- Percent -->
            <EditText
                android:id="@+id/editTextKycNomineeInfoPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="center"
                android:hint="@string/hint_edit_text_enter_percent"
                android:inputType="numberDecimal" />
            <!-- Remarks -->
            <!-- Remarks -->
            <!-- Remarks -->
            <EditText
                android:id="@+id/editTextKycNomineeInfoRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="top|center"
                android:hint="@string/hint_edit_text_enter_remark"
                android:inputType="text|textMultiLine" />
            <!-- Save Nominee Info -->
            <!-- Save Nominee Info -->
            <!-- Save Nominee Info -->
            <Button
                android:id="@+id/btnKycNomineeInfoSaveNomineeInfo"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/margin_top"
                android:background="@drawable/btn_border"
                android:text="@string/label_button_nominee_info"
                android:textAllCaps="false"
                android:textColor="@color/btn_label"
                android:textSize="16sp" />
            <!-- Server Response -->
            <!-- Server Response -->
            <!-- Server Response -->
            <TextView
                android:id="@+id/txtViewKycNomineeInfoShowServerResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin_top"
                android:text=""
                android:textColor="@color/text_view_font_error"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
